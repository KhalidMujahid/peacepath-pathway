<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Peace Path Agribusiness Venture</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-green-50 flex items-center justify-center min-h-screen">

    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-green-800 text-center mb-6">Join Our Partnership</h2>

        <form action="#" method="POST" id="registerForm">
            <div class="mb-4">
                <label for="fullName" class="block text-gray-700 font-semibold">Full Name</label>
                <input type="text" id="fullName" name="fullName"
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    placeholder="Enter your full name" required>
            </div>

            <div class="mb-4">
                <label for="email" class="block text-gray-700 font-semibold">Email Address</label>
                <input type="email" id="email" name="email"
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    placeholder="Enter your email" required>
            </div>

            <div class="mb-4">
                <label for="phone" class="block text-gray-700 font-semibold">Phone Number</label>
                <input type="tel" id="phone" name="phone"
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    placeholder="Enter your phone number" required>
            </div>

            <div class="mb-4">
                <label for="investmentAmount" class="block text-gray-700 font-semibold">Investment Amount (₦)</label>
                <input type="number" id="investmentAmount" name="investmentAmount" min="200000"
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    placeholder="Minimum ₦200,000" required>
            </div>

            <div class="mb-4">
                <label for="investorAccountNumber" class="block text-gray-700 font-semibold">Investor Account
                    Number</label>
                <input type="text" id="investorAccountNumber" name="investorAccountNumber"
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    placeholder="Enter your account number" required>
            </div>

            <div class="mb-4">
                <label for="investorBankName" class="block text-gray-700 font-semibold">Investor Bank Name</label>
                <input type="text" id="investorBankName" name="investorBankName"
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    placeholder="Enter your bank name" required>
            </div>

            <div class="mb-4">
                <label for="nextOfKinName" class="block text-gray-700 font-semibold">Next of Kin Name</label>
                <input type="text" id="nextOfKinName" name="nextOfKinName"
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    placeholder="Enter next of kin's name" required>
            </div>

            <div class="mb-4">
                <label for="nextOfKinPhone" class="block text-gray-700 font-semibold">Next of Kin Phone Number</label>
                <input type="tel" id="nextOfKinPhone" name="nextOfKinPhone"
                    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                    placeholder="Enter next of kin's phone number" required>
            </div>

            <div class="mb-4">
                <label for="agreeTerms" class="flex items-center">
                    <input type="checkbox" id="agreeTerms" class="mr-2">
                    <span class="text-gray-700">I agree to the <a href="#" class="text-green-600 hover:underline">Terms
                            & Conditions</a></span>
                </label>
            </div>

            <button type="submit"
                class="w-full px-6 py-3 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 transition">Register
                Now</button>
        </form>

        <p class="text-center text-gray-600 mt-4"><a href="/" class="text-green-600 hover:underline">Home</a></p>
    </div>

    <script>
        document.getElementById("registerForm").addEventListener("submit", async function (event) {
            event.preventDefault();

            const formData = {
                fullName: document.getElementById("fullName").value,
                email: document.getElementById("email").value,
                phone: document.getElementById("phone").value,
                investmentAmount: document.getElementById("investmentAmount").value,
                investorAccountNumber: document.getElementById("investorAccountNumber").value,
                investorBankName: document.getElementById("investorBankName").value,
                nextOfKinName: document.getElementById("nextOfKinName").value,
                nextOfKinPhone: document.getElementById("nextOfKinPhone").value,
            };

            try {
                const response = await fetch("/register", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(formData),
                });

                const data = await response.json();
                alert(data.message);
            } catch (error) {
                alert("Error submitting form. Please try again.");
            }
        });
    </script>

</body>

</html>